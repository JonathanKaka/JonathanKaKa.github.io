#include <stdio.h>
#include <string.h>

//------------------练习4-12------------------------
//这段代码是根据例题printd函数而来，这段代码能够实现的两大因素：
//1：static 静态变量的使用
//2：字符串结束标志符的加入

int itoa_recursion(int n, char *s1)
{
    static int i=0;//重点
    char *s2;
    
    if(n<0)
    {
        *s1='-';
        n=-n;
        i++;
        s1+i;

    }

    if(n/10)
    {
        itoa_recursion(n/10,s1);    //递归       
        i++;
        //s1++;
    }

    *(s1+i) = (n%10+'0');

    return i;
}

int main()
{
    int n = -1234;
    
    #define MAX 10
    char s[MAX];

    char *s1=s;


    int m;
    m=itoa_recursion(n,s1);
    m++;
    *(s+m)='\0';//重点

    printf("the string is: %s\n",s);

    return 0;

    
}
